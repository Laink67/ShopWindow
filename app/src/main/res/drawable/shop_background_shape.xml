<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="42dp"
        android:height="42dp"
        android:left="-4dp"
        android:top="-0.33dp">
        <shape android:shape="rectangle">
            <solid android:color="#44666161" />
            <corners android:radius="30dip" />
        </shape>
    </item>
    <item
        android:left="29.5dp"
        android:top="0dp">
        <shape>
            <solid android:color="#44666161" />
            <corners android:topLeftRadius="30dip" />
        </shape>
    </item>

    <item
        android:width="1000dp"
        android:height="1000dp"
        android:left="29.5dp"
        android:top="3.5dp">
        <shape>
            <solid android:color="@color/productGridBackgroundColor" />
            <corners android:radius="30dip" />
        </shape>
    </item>

    <item
        android:width="1000dp"
        android:height="1000dp"
        android:top="33dp">
        <shape>
            <solid android:color="@color/productGridBackgroundColor" />
        </shape>
    </item>
    <item
        android:width="42dp"
        android:height="42dp"
        android:left="-24dp"
        android:top="-12dp">
        <rotate
            android:fromDegrees="70"
            android:pivotX="50%"
            android:pivotY="100%">
            <shape android:shape="oval">
                <solid android:color="@color/productGridBackgroundColor" />
            </shape>
        </rotate>
    </item>

</layer-list>